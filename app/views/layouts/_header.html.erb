<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "FIT", root_path, id: "logo" %>
    <ul class="nav navbar-nav navbar-right">
      <% if patient_signed_in? %>
        <span class="dashboard">Patient Dashboard </span>
        <div class="btn-group">
          <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">My Profile<span class="caret"></span></button>
          <ul class="dropdown-menu">
            <li><%= link_to "Edit My Profile", edit_patient_registration_path  %></li>
            <li class="divider"></li>
            <li><%= link_to 'Logout', destroy_patient_session_path, method: :delete  %></li>
          </ul>
        </div>
      <% elsif doctor_signed_in? %>
        <span class="dashboard">Doctor Dashboard </span>
        <div class= "btn-group">
          <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">My Profile<span class="caret"></span></button>
          <ul class="dropdown-menu">
            <li><%= link_to "Interaction Page", "#" %></li>
            <li><%= link_to "Edit My Profile", edit_patient_registration_path  %></li>
            <li class="divider"></li>
            <li><%= link_to 'Logout', destroy_patient_session_path, method: :delete  %></li>
          </ul>
        </div>
      <% else %>
        <ul class="nav nav-pills">
          <li><%= link_to 'Patient Login', new_patient_session_path, class: "login" %></li>
          <li><%= link_to 'Doctor Login', new_doctor_session_path %></li>
        </ul>
      <% end %>
    </ul>
  </div>
</header>


