<% if doctor_signed_in? %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for @treatment, url: update_treatment_path(@disease, @treatment), method: :patch  do |f| %>
        <%= f.label :medicine %>
        <%= f.text_field :medicine %>

        <%= f.label :food %>
        <%= f.text_field :food %>

        <%= f.label :activities %>
        <%= f.text_field :activities %>

        <%= f.submit "Save Changes", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
<% end %>

