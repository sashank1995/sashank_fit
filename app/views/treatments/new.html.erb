<% if doctor_signed_in? %>
  <div class="row">
    <div class="col-md-3 col-md-offset-3">
      <%= form_for @treatment, url: create_treatment_path(@disease), html: {class: 'form_horizontal'}  do |f| %>

        <div class="form-group">
          <div class="col-sm-10">
            <%= f.label :medicine %>
            <%= f.text_field :medicine %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-10">
            <%= f.label :food %>
            <%= f.text_field :food %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-10">
            <%= f.label :activities %>
            <%= f.text_field :activities %>
          </div>
        </div>
        <br />
        <%= f.submit "Create Treatment", class: "btn btn-primary" %>
      <% end %><br />

      <%= link_to 'back', show_disease_path(@disease) %>
    </div>
  </div>
<% end %>

